# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /       		                    								controllers.doc.v1.Docs.index
GET		/api/v1/locations/:layerType										controllers.api.v1.Locations.locationsByLayerType(layerType: String, limit: Option[Int] ?= None)
GET		/api/v1/locations/:layerType/:latitude/:longitude 					controllers.api.v1.Locations.locationsByLayerTypeAndCoordinates(layerType: String, latitude: Double, longitude: Double, limit: Option[Int] ?= None)
GET		/api/v1/locations/:layerType/:latitude/:longitude/:maxDistance		controllers.api.v1.Locations.locationsByLayerTypeAndCoordinatesAndMaxDistance(layerType: String, latitude: Double, longitude: Double, maxDistance: Double, limit: Option[Int] ?= None)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           		    								controllers.Assets.at(path="/public", file)
